{% extends 'AppBundle::base.html.twig' %}

{% block content %}
    <h1>Movies List</h1>
    {% if films is not empty %}
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for film in films %}
                    <tr>
                        <td>{{ film.title }}</td>
                        <td>{{ film.date|date('Y-m-d') }}</td>
                        <td>
                            <a href="{{ path('idix_films_view', { 'filmId': film.id }) }}">show</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>No movies imported yet!</p>
    {% endif %}

{% endblock %}

